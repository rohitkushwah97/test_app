<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="Posts">
  <table id="my-table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Title</th>
        <th>Content</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.title %></td>
          <td><%= user.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Post', new_post_path %>